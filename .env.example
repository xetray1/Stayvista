# Server configuration
PORT=8800
NODE_ENV=development

# Database
MONGO_URL=mongodb://localhost:27017/stayvista

# JWT / Auth
JWT_ACCESS_SECRET=replace-with-access-secret
JWT_REFRESH_SECRET=replace-with-refresh-secret
JWT_ACCESS_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_REFRESH_COOKIE_MAX_AGE_MS=604800000

# Root superadmin fallback (used if DB admins are unavailable)
ROOT_ADMIN_USERNAME=change-me
ROOT_ADMIN_PASSWORD=change-me-asap
ROOT_ADMIN_EMAIL=root@example.com

# Cloudinary (file uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Optional Flags
# LOG_LEVEL=info
